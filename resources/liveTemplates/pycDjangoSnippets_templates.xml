<templateSet group="pycDjangoSnippets: django templates">

    <template name="dj-ocblock" description="{% val %}" toReformat="true" toShortenFQNames="true" value="{% $VAR$ %}$END$">
        <variable alwaysStopAt="true" defaultValue="" expression="" name="VAR"/>
        <context>
            <option name="Django" value="true"/>
            <option name="HTML" value="true"/>
        </context>
    </template>

